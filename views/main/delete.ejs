<% layout('layout') -%>
<style>
#datas {
  font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#datas td, #datas th {
  border: 1px solid #ddd;
  padding: 8px;
  font-size: 18px;
}

#datas tr:nth-child(even){background-color: #f2f2f2;}

#datas tr:hover {background-color: #ddd;}

#datas th {
  padding-top: 12px;
  padding-bottom: 12px;
  font-size: 20px;
  text-align: left;
  background-color: rgba(108, 122, 137, 1);
  color: white;
  }

  #myData {
              width: 90%;
              background-position: 10px 10px;
              background-repeat: no-repeat;
              font-size: 16px;
              padding: 12px 20px 12px 40px;
              border: 2px solid #ddd;
              margin-bottom: 12px;

          }

  .search {
              margin: 0 auto;
              display: inline-block;
              width: 100%;
              text-align: center
          }

</style>
<h1 align="center">Availabe Data</h1>
<div class="search" style="padding-bottom:1%;">
    <input type="text" id="myData" onkeyup="dataFilter()" placeholder="Search for Datas by Email..." title="Type in a email"
            width="60%">
    </div>
<div style="overflow-x:auto;">
<table width="1000px" align="center" id="datas" style ="overflow-x:auto;">
      <tr class="thetabcol table">
        <th><b>Name</b></th>
        <th><b>Email</b></th>
        <th><b>Phone Number</b></th>
        <th><b>Password</b></th>
        <th><b>Date & Time</b></th>
        <th><b> </b></th>
      </tr>
      <% for(var i=0; i < results.length; i++) { %>
      <tr>
        <td><b><%= results[i].userName %></b></td>
       <td><b><%= results[i].emailId %></b></td>
       <td><b><b><%= results[i].phoneNo %></b></td>
       <td><b><%= results[i].password %></b></td>
       <td><b><%= results[i].dateTime %></b></td>
       <td><a href="/" class="btn btn-danger">Delete</a></td>
      </tr>
      <% } %>
    </table>
  </div>
<script src="javascripts/search.js" type="text/javascript"></script>
