<!-- web form -->
<% layout('layout') -%>
<div class="register">
  <div class="container">
    <div class="row">
      <div class="col-md-8 m-auto">
        <h1 class="display-4 text-center">Web Form</h1>
        <p class="lead text-center">Edit your credentials</p>
        <form action="/users/edit" method="post">
          <div class="form-group">
            <h5>Enter the email address you want to edit</h5>
            <input type="email" class="form-control form-control-lg" placeholder="Email Address" name="emaile" /><br>
          </div>
          <h5>Enter new credentials</h5>
          <div class="form-group">
            <input type="text" class="form-control form-control-lg" placeholder="User Name" name="namee" required />
          </div>
          <div class="form-group">
            <input type="password" class="form-control form-control-lg" placeholder="Password" name="passworde" />
          </div>
          <div class="form-group">
            <input type="tel" class="form-control form-control-lg" placeholder="Phone Number" name="phoneNoe" />
          </div>
          <input type="submit" class="btn btn-info btn-block mt-4" />
        </form>
      </div>
    </div>
  </div>
</div>
